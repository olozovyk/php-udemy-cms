RewriteEngine On

<FilesMatch "\.(env|git|htaccess)$">
    Require all denied
</FilesMatch>

<FilesMatch "^composer.*$">
    Require all denied
</FilesMatch>

RewriteCond %{REQUEST_URI} !^/public/(styles|images|scripts)/
RewriteCond %{REQUEST_URI} !^/public/index\.php$
RewriteRule ^(.*)$ /public/index.php [R=301,L]
